{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "isolatedModules": true, // https://preconstruct.tools/guides/building-typescript-packages
        "noEmit": true,
        "jsx": "react-jsx",
        "types": ["vite/client"],
        "noImplicitReturns": false,
        "target": "ES2019",
        "moduleResolution": "Node"
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests",
        "createRuntimeBoxSprinkles",
        "esbuild-plugin",
        "integration",
        "vite-plugin"
    ]
}
