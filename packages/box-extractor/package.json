{
    "name": "@box-extractor/core",
    "version": "0.3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/box-extractor.git",
        "directory": "packages/box-extractor"
    },
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "main": "dist/box-extractor-core.cjs.js",
    "module": "dist/box-extractor-core.esm.js",
    "browser": {
        "./dist/box-extractor-core.esm.js": "./dist/box-extractor-core.browser.esm.js"
    },
    "exports": {
        ".": {
            "module": {
                "worker": "./dist/box-extractor-core.worker.esm.js",
                "browser": "./dist/box-extractor-core.browser.esm.js",
                "default": "./dist/box-extractor-core.esm.js"
            },
            "default": "./dist/box-extractor-core.cjs.js"
        },
        "./vite-plugin": {
            "module": {
                "worker": "./vite-plugin/dist/box-extractor-core-vite-plugin.worker.esm.js",
                "browser": "./vite-plugin/dist/box-extractor-core-vite-plugin.browser.esm.js",
                "default": "./vite-plugin/dist/box-extractor-core-vite-plugin.esm.js"
            },
            "default": "./vite-plugin/dist/box-extractor-core-vite-plugin.cjs.js"
        },
        "./esbuild-plugin": {
            "module": {
                "worker": "./esbuild-plugin/dist/box-extractor-core-esbuild-plugin.worker.esm.js",
                "browser": "./esbuild-plugin/dist/box-extractor-core-esbuild-plugin.browser.esm.js",
                "default": "./esbuild-plugin/dist/box-extractor-core-esbuild-plugin.esm.js"
            },
            "default": "./esbuild-plugin/dist/box-extractor-core-esbuild-plugin.cjs.js"
        },
        "./package.json": "./package.json"
    },
    "types": "dist/box-extractor-core.cjs.d.ts",
    "scripts": {
        "test": "vitest",
        "test:ci": "vitest run",
        "lint:ts": "tsc --noEmit",
        "lint": "../../node_modules/.bin/eslint './src/**/*.ts' --cache --format=pretty",
        "lint:fix": "../../node_modules/.bin/eslint './src/**/*.ts' --cache --format=pretty --fix",
        "ci": "npm run lint && npm run lint:ts && npm run test:ci"
    },
    "license": "ISC",
    "dependencies": {
        "@box-extractor/logger": "workspace:*",
        "@phenomnomnominal/tsquery": "^5.0.0",
        "@types/debug": "^4.1.7",
        "microdiff": "^1.3.1",
        "pastable": "^2.1.0",
        "ts-evaluator": "^1.0.7",
        "ts-morph": "^17.0.1",
        "ts-pattern": "^4.0.5"
    },
    "peerDependencies": {
        "vite": "^3"
    },
    "devDependencies": {
        "@types/react": "^18.0.15",
        "@types/react-dom": "^18.0.6",
        "@vanilla-extract/sprinkles": "^1.5.1",
        "esbuild": "^0.16.7",
        "prettier": "^2.7.1",
        "ts-toolbelt": "^9.6.0",
        "typescript": "4.9.4",
        "vite": "^3.0.4",
        "vitest": "^0.25.8"
    },
    "preconstruct": {
        "entrypoints": [
            "index.ts",
            "vite-plugin.ts",
            "esbuild-plugin.ts"
        ],
        "exports": {
            "envConditions": [
                "browser",
                "worker"
            ]
        }
    },
    "files": [
        "src",
        "dist",
        "vite-plugin",
        "esbuild-plugin"
    ],
    "keywords": [
        "box",
        "extractor",
        "ast",
        "static",
        "prop",
        "jsx",
        "tsx",
        "typescript",
        "vite",
        "vanilla-extract",
        "esbuild",
        "sprinkles"
    ],
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    }
}
